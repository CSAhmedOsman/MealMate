<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.MealMate" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_yellow</item>
        <item name="colorPrimaryVariant">@color/orange</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_gray</item>
        <item name="colorSecondaryVariant">@color/taupe</item>
        <item name="colorOnSecondary">@color/dark_brown</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/orange</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MealMate.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MealMate" parent="Base.Theme.MealMate" />

    <style name="Theme.MealMate.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MealMate.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>